@model IEnumerable<WebPostgresqlDemo.Models.UserModel>

@{
    ViewData["Title"] = "Users";
}

<div class="text-center">
    <h1 class="display-4">List of users</h1>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped table-hover sortable">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10">No record's found.</td>
            </tr>
        }
        else
        {
            <thead>
                <tr class="danger">
                    @* <th data-defaultsign="_19">@Html.DisplayNameFor(model => model.Id)</th> *@
                    <th data-defaultsign="AZ">@Html.DisplayNameFor(model => model.Name)</th>
                    <th data-defaultsign="AZ">@Html.DisplayNameFor(model => model.Email)</th>
                </tr>
            </thead>
            foreach (var item in Model)
            {
                <tr>
                    @* <td>@item.Id</td> *@
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>
                        <div class="pull-right">
                            <a asp-action="Edit" asp-route-id="@item?.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item?.Id" class="btn btn-success">Details</a>
                            <a asp-action="Delete" asp-route-id="@item?.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </table>
    <a asp-action="Create" class="btn btn-info">Add</a>
</div>  